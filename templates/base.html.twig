<!doctype html>
<html lang="fr">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="/css/common.css" />
        <link rel="stylesheet" href="/css/header.css" />
        <link rel="stylesheet" href="/css/footer.css" />
        <link rel="stylesheet" href="/css/menu.css" />
        {% block customcss %}{% endblock %}

        <title>Œil Glauque</title>

        <!-- Favicon -->
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#da532c">
    </head>
    <body>

        <nav class="menu">
            <div class="menu-toggle" onclick="document.querySelector('nav.menu').classList.toggle('visible')">&times;</div>
            <section class="menu-category">
                <h1 id="festival">Festival</h1>
                <ul>
                    <li><a href="/informationsFestival">Informations</a></li>
                    {% if modeFog %}
                        {#<li><a href="/parties">Liste des parties</a></li>#}
                        {#<li><a href="/nouvellePartie">Proposer une partie</a></li>#}
                    {% endif %}
                    <li><a href="/photos">Photos</a></li>
                </ul>
            </section>
            <section class="menu-category">
                <h1><a href="/informationsClub">Le club</a></h1>
            </section>
            <section class="menu-category">
                <h1 id="festival">Réservations</h1>
                <ul>
                    <li><a href="/reservations/boardGame">Réservations de jeux</a></li>
                    <li><a href="/reservations/local">Réservations du local</a></li>
                </ul>
            </section>
            <section class="menu-category">
                <h1><a href="/contact">Contact</a></h1>
            </section>
        </nav>

        <header>
            <div id="menu-toggle" onclick="document.querySelector('nav.menu').classList.toggle('visible')"></div>
            <h1><a href="/">Festival de l'Oeil Glauque</a></h1>
            {% if modeFog %}
                <div id="date">{{ dates }}</div>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {# Link to user control panel : {{ app.user.username }} #}
            <div id="login">
                <a href="{{ path('ucp') }}" class="ucp">{{ app.user.username }}</a>
                <span class="separator"></span>
                <a href="/logout">Déconnexion</a>
            </div>
            {% else %}
            <div id="login">
                <a href="/register">Inscription</a>
                <span class="separator"></span>
                <a href="/login">Connexion</a>
            </div>
            {% endif %}
        </header>

        <main role="main" class="container">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ flash }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
        </main>

        <footer>
            <p class="copyright">Copyright &copy; &OElig;il Glauque 2021 - Festival de l'&OElig;il Glauque de l'Amicale des &Eacute;lèves de l'INSA Rennes</p>
            <p>
                Développé avec amour par l'équipe web : Aypristyle, Bobby, Elnath, Jeanne, Lugrim et Termina<br />
                Textes : Sighy<br />
                Artworks : Catnip et <a href="https://fr.freepik.com/">Freepik</a><br />
            </p>
        </footer>


        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <!--<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>-->
        <script
			  src="https://code.jquery.com/jquery-3.3.1.min.js"
			  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
			  crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
        {% block scripts %}{% endblock %}
    </body>
</html>
