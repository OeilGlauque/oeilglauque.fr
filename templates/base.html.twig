                </ul>
            </section>
            <section class="menu-category">
                <h1 id="festival">R√©servations</h1>
                <ul>
                    <li><a href="/reservations/boardGame">R√©servations de jeux</a></li>
                    <!-- <li><a href="/reservations/local">R√©servations du local</a></li> -->
                </ul>
            </section>
            <section class="menu-category">
                <h1 id="festival">Autres</h1>
                <ul>
                    <li><a href="/informationsClub">Le club</a></li>
                    <li><a href="{{ path('affiches') }}">Affiches</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </section>
        </nav>

        <header id="header">
            <div id="title_container">
                <div id="menu-toggle" onclick="document.querySelector('nav.menu').classList.toggle('visible')"></div>
                {% if modeFog %}
                    <div id="date"><h1><a href="/" id="appbar-title">{{ dates }}</a></h1></div>
                {% else %}
                    <h1><a href="/" id="appbar-title">Festival de l'OEil Glauque</a></h1>
                {% endif %}
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div id="login">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="/admin">üëÅ</a>
                    <span class="separator"></span>
                    <a href="/order">üçï</a>
                    <span class="separator"></span>
                {% elseif is_granted('ROLE_SHOP') %}
                    <a href="/order">üçï</a>
                    <span class="separator"></span>
                {% endif %}
                <a href="{{ path('ucp') }}" class="ucp button">{{ app.user.username }}</a>
                <span class="separator"></span>
                <a href="/logout" class="button">D√©connexion</a>
            </div>
            {% else %}
            <div id="login">
                <a href="/login" class="button">Connexion</a>
                <span class="separator"></span>
                <a href="/register" class="button primary">Inscription</a>
            </div>
            {% endif %}
        </header>

        {% block mainPage %}{% endblock %}

        <main role="main" class="container">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                {% if label == "popup" %}
                    <script>
                        window.addEventListener('load',function(){
                            alert("{{ flash }}");
                        });

                    </script>
                {% else %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show">
                        {{ flash }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
        </main>

        <footer class="scroll-animation">
