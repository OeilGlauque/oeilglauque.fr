{% extends 'base.html.twig' %}

{% block body %}

        {% if error %}
            <div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row">
			<div class="center" id="conex">
				<img src="img/connexion.png" height="200px"></img>
			</div>
            <form action="{{ path('login') }}" method="post" class="well col-lg-8">
                <div class="row">
                    <input class="col-lg-7" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Pseudo" />
                </div>
                <div class="row">
                    <input class="col-lg-7" type="password" id="password" name="_password" placeholder="Mot de passe"/>
                </div>
                    {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                    <button type="submit">Connexion</button>
            </form>
        </div>

{% endblock %}