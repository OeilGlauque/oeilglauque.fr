{% extends 'base.html.twig' %}

{% block customcss %}
    <link rel="stylesheet" href="/css/pwd.css"/>
{% endblock %}

{% block body %}
    <h1 class="titre">
        Connexion
    </h1>

    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show">
            {{ error.messageKey|trans(error.messageData, 'security') }}
            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            </button>
        </div>
    {% endif %}

    <div class="pwd">
        <form action="{{ path('login') }}" method="post" class="well col-lg-8">
            <div class="row">
                <input class="col-lg-7" type="text" id="username" name="_username" value="{{ last_username }}"
                       placeholder="Pseudo"/>
            </div>
            <div class="row">
                <input class="col-lg-7" type="password" id="password" name="_password" placeholder="Mot de passe"/>
            </div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <button type="submit">Connexion</button>
        </form>
        <a class="pwd" href="/forgotpwd">Mot de passe oubli√© ?</a>
    </div>

{% endblock %}
