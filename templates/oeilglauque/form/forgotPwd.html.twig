{% extends 'base.html.twig' %}

{% block customcss %}
    <link rel="stylesheet" href="/css/pwd.css"/>
{% endblock %}

{% block body %}

        <h1 class="titre small">Mot de passe oublié</h1>
        {{ form_start(form) }}
                <div>
                        {{ form_row(form.email) }}
                </div>

                <p class="pwd">Un lien pour réinitialiser votre mot de passe sera envoyé sur l'adresse mail que vous avez renseigné lors de l'inscription.</p>

                <div>
                        {{ form_row(form.save) }}
                </div>
        {{ form_end(form)}}

{% endblock %}