{% extends 'base.html.twig' %}

{% block body %}

        <main role="main" class="container">
            <h1>Liste des parties</h1>
            {% for g in games %}
                {{ include('oeilglauque/shards/game.html.twig', 
                            {
                                'title': g.getTitle(), 
                                'text': g.getDescription(), 
                                'id': g.getId(), 
                                'author': g.getAuthor().getPseudo(), 
                                'slot': g.getGameSlot().getText(), 
                                'freeSeats': g.getFreeSeats(), 
                                'onlineOnly': g.getForceOnlineSeats()
                            }) }}
            {% else %}
            <div class="row">
                <div class="col-lg-12">
                    <p>Il n'y a pas encore de partie cette ann√©e... </p>
                </div>
            </div>
            {% endfor %}
        </main><!-- /.container -->

{% endblock %}