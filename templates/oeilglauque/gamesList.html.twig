{% extends 'base.html.twig' %}

{% block customcss %}
    <link rel="stylesheet" href="/css/gameList.css"/>
{% endblock %}


{% block body %}

        <h1>Liste des parties</h1>
        <p class="well m-0"><b>Attention !</b> Si vous êtes inscrit sur le site, votre place est réservée à condition que vous soyez présent 10 minutes avant le début de la partie et que vous achetiez un pass Jeu de Rôle à l'accueil, coûtant 2€ et vous offrant l'accès à toutes les parties. </p>
        {% if hasRegistered %}
            <b>Parties jouées cette année :</b><br />
            <ul>
            {% for g in userGames %}
            <li><a href="{{ path('showGame', {'id': g.getId()}) }}">{{ g.getTitle }}</a> ({{ g.getGameSlot().getText() }})</li>
            {% endfor %}
            </ul>
        {% endif %}

        {% if isMJ %}
            <b>Parties organisées par vous cette année :</b><br />
            <ul>
            {% for g in userProposedGames %}
            <li><a href="{{ path('showGame', {'id': g.getId()}) }}">{{ g.getTitle() }}</a> ({{ g.getGameSlot().getText() }})</li>
            {% endfor %}
            </ul>
        {% endif %}

        {% if games|length > 0 %}
            <div class="d-flex ">
                <div class="mt-10 me-4 col-2 d-flex flex-column" id="filter">
                    <b>Créneaux sélectionnés :</b><br />
                    <label class="btn mb-3 d-flex justify-content-center align-items-center" id="selectAll">
                        <span>Tout désélectionner</span>
                        <input type="checkbox" hidden checked autocomplete="off" />
                    </label>
                    {% for g in gameSlots %}
                        <label class="btn btn-filtre mb-3 d-flex justify-content-between align-items-center">
                            <div></div>
                            <span>{{ g.getText() }}</span>
                            <input type="checkbox" data="{{ g.getId() }}" checked autocomplete="off" />
                        </label>
                    {% endfor %}
                </div>
                <div class="col-10">
                    {% for g in games %}
                        {{ include('oeilglauque/shards/game.html.twig', 
                            {
                                'game': g
                            }) 
                        }}
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-lg-12">
                    <p>Il n'y a pas encore de partie cette année... Revenez bientôt !</p>
                </div>
            </div>
        {% endif %}

{% endblock %}

{% block scripts %}
<script src="/js/selectGames.js"></script>
{% endblock %}
